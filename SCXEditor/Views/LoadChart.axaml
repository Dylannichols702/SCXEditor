<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="400"
        x:Class="SCXEditor.Views.LoadChart"
        Title="LoadChart" Width="200" Height="400">
	<StackPanel HorizontalAlignment="Center">
		<TextBlock FontSize="18" FontWeight="Bold">Load Chart</TextBlock>
		<TextBlock>Chart:</TextBlock>
		<ComboBox  ItemsSource="{Binding Charts}" SelectedValue="{Binding SelectedChart}"/>
		<Button Width="75" Command="{Binding LoadChartCommand}">Load</Button>
	</StackPanel>
</Window>

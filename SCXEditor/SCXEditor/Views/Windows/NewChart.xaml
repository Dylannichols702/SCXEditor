<Window x:Class="SCXEditor.Views.Windows.NewChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCXEditor.Views.Windows"
        mc:Ignorable="d"
        Title="NewChart" Height="400" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock FontSize="18px" FontWeight="Bold">Create Chart</TextBlock>
            <TextBlock>Chart Difficulty:</TextBlock>
            <ComboBox/>
            <TextBlock>Chart Level:</TextBlock>
            <TextBox Name="diffLevel"></TextBox>
            <Button Width="75px">Create</Button>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="SCXEditor.NewChartSet"
        x:Name="NewChartSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCXEditor"
        mc:Ignorable="d"
        Title="New Chart Set" Height="400" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <TextBlock FontSize="18px" FontWeight="Bold">Create Chart Set</TextBlock>
            <TextBlock>Song Title:</TextBlock>
            <TextBox Name="songTitle" Text="{Binding SongTitle}"/>
            <TextBlock>Song Artist:</TextBlock>
            <TextBox Name="songArtist" Text="{Binding SongArtist}"/>
            <TextBlock>Chart Set Album Directory:</TextBlock>
            <TextBox IsReadOnly="True" Text="{Binding Path=ChartSetDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Name="chartSetPathSelect" Width="75px" Command="{Binding ShowFolderBrowserCommand}">Select Path</Button>
                <Button Width="75px" Command="{Binding CreateChartSetCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CommandParameter="{Binding ElementName=NewChartSetWindow}">Create</Button>
        </StackPanel>
    </Grid>
</Window>
